---
import ActoLayout from "../layouts/ActoLayout.astro";

const projects = [
    {
        name: "HomeworkSMP",
        description:
            "Community Minecraft server with governance and collaborative builds.",
        href: "https://homeworksmp.gay",
        hreftext: "Join today",
    },
    {
        name: "Triathlon",
        description:
            "Student-athlete. A brief look into my journey of progression.",
        href: "/triathlon",
    },
    {
        name: "Veltryx",
        description: "More than just an email.",
        href: "https://veltryx.xyz",
        hreftext: "Learn more about Veltryx",
    },
    {
        name: "Squid Game",
        description: "Coming soon...",
        href: "#",
    },
];
---

<ActoLayout title="Projects">
    <section class="max-w-5xl mx-auto text-neutral-100">
        <h2 class="text-3xl font-semibold mb-8 text-indigo-400">Projects</h2>

        <div class="grid md:grid-cols-2 gap-6">
            {
                projects.map((project) => (
                    <div class="bg-neutral-900 p-6 rounded-lg shadow hover:shadow-indigo-500/50 transition">
                        <h3 class="text-xl font-semibold mb-2">
                            {project.name}
                        </h3>
                        <p class="text-neutral-400 mb-4">
                            {project.description}
                        </p>
                        {project.href !== "#" && (
                            <a
                                href={project.href}
                                class="text-indigo-400 hover:text-indigo-300 font-medium"
                            >
                                {(project.hreftext || "Learn more") + " â†’"}
                            </a>
                        )}
                    </div>
                ))
            }
        </div>
    </section>
</ActoLayout>
