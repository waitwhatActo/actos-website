---
import ActoLayout from "../layouts/ActoLayout.astro";

const projects = [
    {
        name: "HomeworkSMP",
        description:
            "Community Minecraft server with governance and collaborative builds.",
        href: "#",
    },
    {
        name: "Veltryx Identity",
        description:
            "Email & identity management system for personal projects.",
        href: "#",
    },
    {
        name: "Automation Scripts",
        description: "Daily-use scripts & tooling to streamline workflow.",
        href: "#",
    },
    {
        name: "Cloud Experiments",
        description: "Testing networking, VPNs, and cloud infrastructure.",
        href: "#",
    },
];
---

<ActoLayout title="Projects">
    <section class="max-w-5xl mx-auto text-neutral-100">
        <h2 class="text-3xl font-semibold mb-8 text-indigo-400">Projects</h2>

        <div class="grid md:grid-cols-2 gap-6">
            {
                projects.map((project) => (
                    <div class="bg-neutral-900 p-6 rounded-lg shadow hover:shadow-indigo-500/50 transition">
                        <h3 class="text-xl font-semibold mb-2">{project.name}</h3>
                        <p class="text-neutral-400 mb-4">{project.description}</p>
                        <a href={project.href} class="text-indigo-400 hover:text-indigo-300 font-medium">Learn more â†’</a>
                    </div>
                ))
            }
        </div>
    </section>
</ActoLayout>
